<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>

    <div id="cabecera">
        <div id="logo">
            <h1></h1>
        </div>
        <div id="buscador">
            <form action="#" method="post">
                Buscar &nbsp;
                <input name="busqueda" type="text" />
            </form>
        </div>

    </div>
    <div id="menu">
        <ul id="menu_principal">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Afiliado", "Index", "Afiliado")</li>
            <br />
            <hr />
        </ul>
    </div>


    <div id="contenido">
        <div id="principal">
            @RenderBody()
        </div>
        <div id="secundario">
            <h2>Opciones</h2>
        </div>
    </div>
    <div id="pie">
        <p>Datos de la WebSite - 2021</p>
    </div>
   
    @RenderSection("scripts", required: false)
</body>
</html>
